{
  //  "extends": "@nuxt/typescript",

  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "*": ["./src/@types/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["node", "@nuxt/vue-app", "nuxt-i18n", "facebook-js-sdk"]
  },

  "exclude": ["node_modules"]
}
