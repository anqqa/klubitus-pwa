{
  "name": "klubitus",
  "version": "9.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "client"
    ],
    "nohoist": [
      "**/patch-package"
    ]
  },
  "scripts": {
    "api:build": "docker-compose build api",
    "api:precommit": "yarn workspace klubitus-api precommit",
    "api:shell": "docker-compose run api sh",
    "api:up": "docker-compose up api",
    "api:yarn": "docker-compose exec api yarn",
    "client:build": "docker-compose build --no-cache client",
    "client:precommit": "yarn workspace klubitus-client precommit",
    "client:shell": "docker-compose run client sh",
    "client:up": "docker-compose up client",
    "client:yarn": "docker-compose exec client yarn",
    "db:psql": "docker-compose exec db psql -U klubitus klubitus",
    "db:up": "docker-compose up db"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && git -p diff --cached",
      "post-commit": "git update-index --again"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@fimbul/valtyr": "^0.21.0",
    "@fimbul/ve": "^0.21.0",
    "@fimbul/wotan": "^0.21.1",
    "babel-cli": "^6.26.0",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.3"
  }
}
